<div class="col mb-3">
    <div class="card h-100">
      <img src="<%=pet.pictures.first.image%>" class="card-img-top img-fluid" alt="<%=pet.pictures.first.image%>">
      <div class="card-body">
        <h5 class="card-title"><%=pet.name%></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          <%=pet.species%>
          <% unless pet.estimated_birthday.nil? %>
            <%= "#{time_ago_in_words(pet.estimated_birthday)} old" %>
          <% end %>
        </h6>
        <% unless pet.gender.nil? && pet.weight.nil? %>
          <h6 class="card-subtitle mb-2 text-muted">
            <%=pet.gender%>
            <% unless pet.weight.nil? %>
              <%="#{pet.weight.to_i} lbs"%>
            <% end %>
          </h6>
        <% end %>
        <span class="badge badge-light"><%=pet.status%></span>
        <%# <p class="card-text">TEXT</p> %>
        <div>
          <%= link_to "Details", pet, class: "btn btn-outline-primary btn-sm"%>
          <% if current_user.watchlists.find_by(pet: pet).nil? %>
            <%= form_with(model: pet.watchlists.build(user: current_user), local: false, id: "watch_#{pet.id}", class: "d-inline-block") do |form| %>
              <%= form.hidden_field :pet_id %>
              <%= form.hidden_field :user_id %>
              <%= form.button class: "btn btn-outline-success btn-sm" do %>
                  Add to Watchlist
              <% end %>
            <% end %>
          <% else %>
            <%= link_to current_user.watchlists.find_by(pet: pet), remote: true, method: :delete, id: "stop_watching_#{pet.id}", class: "btn btn-outline-danger btn-sm" do%>
                Stop Watching
            <% end %>
          <% end%>
        </div>
        <% unless pet.children_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Children <span class="badge badge-light"><%=pet.children_competability_ranking%></span></span>
        <% end %>
        <% unless pet.dog_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Dog <span class="badge badge-light"><%=pet.dog_competability_ranking%></span></span>
        <% end %>
        <% unless pet.cat_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Cat <span class="badge badge-light"><%=pet.cat_competability_ranking%></span></span>
        <% end %>
        <% unless pet.home_alone_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Home Alone <span class="badge badge-light"><%=pet.home_alone_competability_ranking%></span></span>
        <% end %>
        <% unless pet.activity_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Activity <span class="badge badge-light"><%=pet.activity_competability_ranking%></span></span>
        <% end %>
        <% unless pet.enrichment_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Enrichment <span class="badge badge-light"><%=pet.enrichment_competability_ranking%></span></span>
        <% end %>
        <% unless pet.human_socialability_competability_ranking.nil?%>
          <span class="badge badge-pill badge-info">Human Socialability <span class="badge badge-light"><%=pet.human_socialability_competability_ranking%></span></span>
        <% end %>
      </div>
    </div>
<!DOCTYPE html>
<html>
  <head>
    <title>Adosho</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render "shared/cdn_assets" %>

  </head>

  <body>
    <%= render "shared/navbar" %>
    
    <div class="container">
      <% if notice.present?%>
        <%= render "shared/flash", message: notice, css_class: "success"%>
      <%end%>
      <% if alert.present?%>
        <%= render "shared/flash", message: alert, css_class: "success"%>
      <%end%>
      <%= yield %>
    </div>
  </body>
</html>
